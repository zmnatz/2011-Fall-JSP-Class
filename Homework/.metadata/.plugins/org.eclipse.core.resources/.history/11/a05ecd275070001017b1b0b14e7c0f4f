<script>
function formSubmit(arg1){
	with(document.frmMain){
		switch(arg1){
		case 'Reset':
			reset();
			break;
		case 'Save Info':
			action = 'updateInfo';
			submit();
			break;
		}
	}
}
function validateForm(form){
	if(form.loginType){
		var statusSelected = false;
		for(var i=0;i<status.length;i++)
			if(status[i].checked){
				statusSelected = true;
				break;
			})
	}
}
</script>
