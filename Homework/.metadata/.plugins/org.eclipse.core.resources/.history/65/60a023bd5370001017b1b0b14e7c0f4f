<script>
function formSubmit(arg1){
	with(document.frmMain){
		switch(arg1){
		case 'Reset':
			reset();
			break;
		case 'Save Info':
			if(!validateForm(this)) 
				return;
			action = 'updateInfo';
			submit();
			break;
		}
	}
}
function validateForm(form){
	with(form){
		var typeSelected = false;
		if(loginType){
			for(i in typeSelected)
				if(loginType[i].checked){
					typeSelected = true;
					break;
				}
			form['loginTypeError'].innerHTML = typeSelected ? '' : 
				'You must select a registration type.';
		}
		
		if(email && email.value=='')
			return alertError('You must enter a valid email address.');
		if(password && password.value!=repassword.value)
			return alertError('The passwords entered do not match.');
		if(name.value=='')
			return alertError('Name cannot be blank.');
		if()
	}
}

function checkParam(form,field){
	if(form[field]){
		if(form[field]=='' || form[field]==undefined){
			form[field+"Error"].innerHTML = "This field cannot be blank.";
			return false;
		} else {
			form[field+"Error"].innerHTML = "";
			return true;
		}
	}
	return true;
}

function alertError(msg){
	alert(msg);
	return false;
}
</script>
